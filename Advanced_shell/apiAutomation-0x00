#!/bin/bash

# Define the API endpoint and output files
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL")

# Extract the HTTP status code (last 3 digits)
http_status="${response: -3}"

# Check if the request was successful
if [ "$http_status" -ne 200 ]; then
    echo "[ERROR] Failed to fetch data for Pikachu. HTTP Status: $http_status" >> "$ERROR_FILE"
    # Optionally remove incomplete JSON file
    rm -f "$OUTPUT_FILE"
fi
