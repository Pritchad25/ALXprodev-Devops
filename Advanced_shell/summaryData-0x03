#!/bin/bash

# Output CSV file
CSV_FILE="pokemon_report.csv"
DATA_DIR="pokemon_data"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Loop through all JSON files in pokemon_data/
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq '.height' "$file" | awk '{ printf "%.1f", $1 / 10 }')
    weight=$(jq '.weight' "$file" | awk '{ printf "%.1f", $1 / 10 }')
    echo "$name,$height,$weight" >> "$CSV_FILE"
done

# Output summary
echo -e "\nCSV Report generated at: $CSV_FILE"

# Display report
cat "$CSV_FILE"

# Calculate averages with awk
awk -F, 'NR>1 {sum_h+=$2; sum_w+=$3; count++}
END {
    printf "\nAverage Height: %.2f m\n", sum_h/count
    printf "Average Weight: %.2f kg\n", sum_w/count
}' "$CSV_FILE"
